<main class="contenedor contenedor-formularios no-padding">
    <h1><%= pagina %></h1>
    <form  method="POST" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" value="<%= grupo.nombre %>" placeholder="Nombre Grupo"  >
        </div>
        <div class="campo descripcion">
            <label>Descripcion</label>
            <div class="contenedor-editor">
                <input type="hidden" value="<%= grupo.descripcion %>" id="x" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
            <div class="campo">
                <label>Categoria</label>
                <select name="categoriaId">
                    <option value="" selected disabled>-Selecciona-</option>
                    <% categorias.forEach(categoria => { %>
                    <option 
                    value="<%= categoria.id %>"
                    <%= (grupo.categoriaId === categoria.id) ? "selected": "" %>
                    ><%= categoria.nombre %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="campo">
            <label>Sitio Web</label>
            <input type="url" value="<%= grupo.url %>" name="url" placeholder="Sitio Web"  >
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Editar Grupo">
        </div>
    </form>
</main>